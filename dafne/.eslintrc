{
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "overrides": [
      {
        "files": ["*.js", "*.jsx"],
        "parser": "espree",
        "parserOptions": {
          "ecmaVersion": 2021,
          "sourceType": "module"
        }
      }
    ],
    "env": {
      "node": true, 
      "browser": true
    },
    "rules": {
      "@typescript-eslint/ban-types": [
        "error",
        {
          "extendDefaults": true,
          "types": {
            "{}": false
          }
        }
      ]
    },
    "import/no-commonjs": "error" 
  }
  